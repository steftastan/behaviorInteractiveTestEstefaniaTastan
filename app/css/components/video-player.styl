/* ==========================================================================
   Video player simulated in the Streamline your workflow section.
   ========================================================================== */

/* Global styles
   ========================================================================== */

.videoPlayer_wrapper
  display: flex
  justify-content: center
  align-items: center
  bgImage('../images/video_player.jpg', no-repeat, cover)
  height: 300px
  border-radius: 10px
  position: absolute
  z-index: 400

.videoPlayer_container
  position: relative
  cursor: pointer


.videoPlayer_video
  position: absolute
  z-index: 300


.videoPlayer_button
  cursor: pointer




/* Mobile
   ========================================================================== */

+mobile()

  .videoPlayer_container
    position: relative
    max-width: 100%
    height: 300px
    margin: 5px 30px 0


    .videoPlayer_wrapper,
    .videoPlayer_video
      width: 100%


    .videoPlayer_ytVideo
      width:100%
      height:300px




